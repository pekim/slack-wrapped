{
  "name": "slack-wrapped",
  "productName": "Slack Wrapped",
  "version": "2.0.0",
  "description": "Slack wrapped in electron.",
  "main": "lib/main/main.js",
  "homepage": "https://github.com/pekim/slack-wrapped",
  "bugs": "https://github.com/pekim/slack-wrapped/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/pekim/slack-wrapped.git"
  },
  "dependencies": {
    "css-modules-require-hook": "1.0.11",
    "electron-prebuilt": "0.34.2",
    "md5-hex": "1.1.0",
    "normalize.css": "3.0.3",
    "postcss": "5.0.10",
    "postcss-import": "7.1.0",
    "postcss-modules-extract-imports": "1.0.0",
    "postcss-modules-local-by-default": "1.0.0",
    "postcss-modules-resolve-from-alias": "1.3.0",
    "postcss-modules-scope": "1.0.0",
    "postcss-modules-values": "1.1.0",
    "react": "0.14.1",
    "react-dom": "0.14.1",
    "react-redux": "4.0.0",
    "redux": "3.0.4",
    "redux-actions": "0.8.0",
    "updeep": "0.10.1"
  },
  "devDependencies": {
    "babel": "5.8.29",
    "babel-eslint": "4.1.3",
    "babel-plugin-module-alias": "0.2.0",
    "copyfiles": "0.2.1",
    "electron-packager": "5.1.1",
    "eslint": "1.7.3",
    "eslint-plugin-react": "3.6.3",
    "nodemon": "1.8.0",
    "onchange": "2.0.0"
  },
  "scripts": {
    "clean": "rm -fr lib dist",
    "babel": "babel --out-dir lib src",
    "babel:watch": "babel --watch --out-dir lib src",
    "build": "npm run babel && npm run copy",
    "copy": "copyfiles -u 1 'src/**/*.+(css|html|png)' lib",
    "copy:watch": "onchange 'src/**/*.+(css|html|png)' -- npm run copy",
    "develop": "npm run clean && npm run build && npm run watch",
    "watch": "npm run babel:watch & npm run copy:watch & nodemon",

    "package": "npm run clean && npm run build && npm run package:electron && npm run package:tar",
    "package:electron": "electron-packager . slack-wrapped --platform=linux --arch=x64 --version=0.34.2 --out dist/package --overwrite --ignore 'src|dist\/package' --ignore=node_modules/\\.bin --prune",
    "package:tar": "tar -zcf dist/slack-wrapped-linux-x64.tar.gz -C dist/package slack-wrapped-linux-x64"
  },
  "keywords": [
    "slack",
    "application",
    "wrapped",
    "electron"
  ],
  "author": "Mike D Pilsbury",
  "license": "MIT"
}

.slack-wrapped-theme-meta
  name: Dark;
  description: 'A dark theme, for use with \"Message Display\" preference set to \"Compact\"';

sidebarBackgroundColour = #282828

.dense_theme
  #messages_container
    background-color #202020

  .day_divider
    background-color #202020
    color hsl(0, 0%, 95%)

  .day_divider_label
    color #202020

  .message
    color hsl(0, 0%, 95%)

  .message.divider
    border-top none

  .message.first,
  .message.first.divider
    margin-top 0

  .message
    .timestamp
      display block
      color hsl(0, 0%, 45%)

    .mention
      background hsl(200, 75%, 75%)
      color black

    code
      font-size 0.9em
      line-height 0.9em

      a
        color hsl(240, 80%, 40%)

  .bot_label
    color hsl(0, 0%, 10%)

  .msgs_holder
    .unread_divider
      hr
        border-top-color #FF4040

      .divider_label
        display none

  #footer
    background-color #202020

  #col_channels
    background-color sidebarBackgroundColour

  .tab-content
    .tab-pane
      background-color sidebarBackgroundColour

  #details_tab
    .channel_page_section
      background-color sidebarBackgroundColour
